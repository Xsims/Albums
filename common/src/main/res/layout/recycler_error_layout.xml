<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    >

  <ImageView
      android:id="@+id/error_image"
      android:layout_width="@dimen/error_image_view_width"
      android:layout_height="@dimen/error_image_view_height"
      android:layout_gravity="center"
      android:src="@android:drawable/ic_menu_close_clear_cancel"
      tools:ignore="ContentDescription"
      />

  <TextView
      android:id="@+id/error_msg_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/material_margin_layout"
      android:layout_marginEnd="@dimen/material_margin_layout"
      android:layout_marginTop="@dimen/spacing_10"
      android:text="@string/something_went_wrong"
      android:textColor="#777777"
      />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/retry_button"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="@string/retry"
      app:cornerRadius="18dp"
      />

</LinearLayout>